pipeline {
    agent { dockerfile true } 
    stages {
        stage('Build') { 
            agent {
                docker {
                    image 'python:3' 
                }
            }
            steps {
                sh 'pip3 install -r requirements.txt' 
                sh 'docker run -d -p 5000:5000 vampi_docker:latest'
            }
        }
    }
}
